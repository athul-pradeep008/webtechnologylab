<body>

  <div class="container">
    <h2>GST Calculator</h2>

    <label for="amount">Amount:</label>
    <input type="number" id="amount" placeholder="Enter amount" min="0">

    <label for="gst">GST (%):</label>
    <select id="gst">
      <option value="0">Select GST</option>
      <option value="3">3%</option>
      <option value="5">5%</option>
      <option value="12">12%</option>
      <option value="18">18%</option>
      <option value="28">28%</option>
    </select>

    <div class="result">
      <p id="actual">Actual Amount: -</p>
      <p id="gstAmt">GST: -</p>
      <p id="total">Total: -</p>
    </div>

    <button class="btn" id="resetBtn">Reset</button>
  </div>

  <script>
    $(document).ready(function() {
      function calculateGST() {
        let amount = parseFloat($("#amount").val());
        let gstPercent = parseFloat($("#gst").val());
        
        if (isNaN(amount) || isNaN(gstPercent) || gstPercent === 0) {
          $("#actual").text("Actual Amount: -");
          $("#gstAmt").text("GST: -");
          $("#total").text("Total: -");
          return;
        }

        let gstAmount = (amount * gstPercent) / 100;
        let totalAmount = amount + gstAmount;

        $("#actual").text("Actual Amount: " + amount.toFixed(2));
        $("#gstAmt").text("GST: " + gstAmount.toFixed(2));
        $("#total").text("Total: " + totalAmount.toFixed(2));
      }

      // jQuery actions: keyup, change, click
      $("#amount").on("keyup change", calculateGST);
      $("#gst").on("change", calculateGST);

      $("#resetBtn").click(function() {
        $("#amount").val("");
        $("#gst").val("0");
        $("#actual").text("Actual Amount: -");
        $("#gstAmt").text("GST: -");
        $("#total").text("Total: -");
      });
    });
  </script>

</body>
</html>
